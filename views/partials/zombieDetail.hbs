<a href="/shop/zombies"><i class="fas fa-arrow-left fa-3x"></i></a>
{{#if buy}}
<div>
    <p class="bought">Zombie has been added to your collection <a href="/user">VIEW</a></p>
</div>
{{/if}}
{{#if notEnoughBrain}}
<div>
    <p class="notEnoughBrain">You have not enough BRAINS!</p>
</div>
{{/if}}
<div class="zombieDetail">
    <div class="zombImage">
        <div>
            <img src="{{zombie.image}}">
        </div>
    </div>

    <div class="details">
        <div class="buy">
            <h3>{{zombie.type}}</h3>
            <p><span>{{zombie.price}}</span> <i class="fas fa-brain fa-3x"></i></p>
            <form action="/shop/zombieDetail?zombie_id={{zombie._id}}" method="POST">
                <button class="butn" type="submit" onclick="updateBrain(event,'{{zombie._id}}');">BUY</button>
            </form>
        </div>

        <div>
            <div>
                <h5>Description: </h5>
                <ul>
                    {{#each zombie.description}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
            <div>
                <h5>Ability: </h5>
                <ul>
                    {{#each zombie.abilities}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>